<%= render 'inicio/header' %>
<!-- Inicia banner -->
<section class="call-2-acction ixtlilco" data-stellar-background-ratio="0.4">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="c2a"> <br>
          <h2><%= @loc %></h2>
          <p>&nbsp;</p>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Termina banner -->
<section class="contact">
  <div class="container">
    <div class="row"> </div>
    <div class="row">
      <div class="col-md-6">
        <h2 class="post-title">Cuestionario</h2>
        <h2 class="post-title">Favor de llenar los siguientes campos:</h2>
        <!-- Inicia cuestionario -->
				<%= form_for(@form, as: 'datos_user', url: save_form_path) do |f| %>

    			<%= f.text_field :nombre, autofocus: true, placeholder: "Nombre", class: "form-control" %>
    			<%= f.text_field :email, placeholder: "Correo electrónico", class: "form-control" %>
    			<%= f.text_field :telefono, placeholder: "Teléfono", class: "form-control" %>
    			<%= f.text_field :pref, placeholder: "Preferencia de contacto", class: "form-control" %>
    			<%= f.hidden_field :localidad, value: @loc %>
    
					<%= button_tag(type: 'submit', name: 'commit', value: "Enviar", class: "btn btn-main btn-lg", id: 'send', 'data-loading-text': "<i class='fa fa-spinner fa-spin'></i> Ingresando..." ) do %>Enviar <i class="fa fa-paper-plane "></i>
		<% end %>
				<% end %>

        <!-- Termina cuestionario -->
        <div id="result-message" role="alert"></div>
      </div>
    </div>
  </div>
</section>
<%= render 'inicio/footer' %>

